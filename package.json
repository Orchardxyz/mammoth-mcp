{
  "name": "mammoth-mcp",
  "version": "1.0.0",
  "packageManager": "pnpm@10.12.1",
  "description": "MCP for mammoth - Convert DOCX files to HTML",
  "main": "dist/cjs/index.js",
  "types": "dist/cjs/index.d.ts",
  "bin": {
    "mammoth-mcp": "dist/cjs/index.js"
  },
  "scripts": {
    "dev": "father dev",
    "build": "father build && chmod +x dist/cjs/index.js",
    "build:deps": "father prebundle",
    "prepublishOnly": "father doctor && npm run build",
    "inspector": "npx @modelcontextprotocol/inspector dist/cjs/index.js"
  },
  "keywords": [
    "mcp",
    "mammoth",
    "docx",
    "html",
    "converter",
    "model-context-protocol"
  ],
  "authors": [
    "Orchard <orchardyz@outlook.com>"
  ],
  "license": "MIT",
  "files": [
    "dist",
    "compiled"
  ],
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "1.25.1",
    "mammoth": "1.11.0",
    "zod": "^4.3.2"
  },
  "devDependencies": {
    "@types/node": "25.0.3",
    "father": "^4.6.13"
  }
}
