{
  "name": "mammoth-mcp",
  "version": "1.0.0",
  "packageManager": "pnpm@10.12.1",
  "description": "MCP for mammoth - Convert DOCX files to HTML",
  "main": "dist/cjs/index.js",
  "types": "dist/cjs/index.d.ts",
  "bin": {
    "mammoth-mcp": "dist/cjs/index.js"
  },
  "scripts": {
    "dev": "father dev",
    "build": "father build && chmod +x dist/cjs/index.js",
    "build:deps": "father prebundle",
    "prepublishOnly": "father doctor && npm run build",
    "inspector": "npx @modelcontextprotocol/inspector dist/cjs/index.js",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json,md}\"",
    "prepare": "husky"
  },
  "keywords": [
    "mcp",
    "mammoth",
    "docx",
    "html",
    "converter",
    "model-context-protocol"
  ],
  "authors": [
    "Orchard <orchardyz@outlook.com>"
  ],
  "license": "MIT",
  "files": [
    "dist",
    "compiled"
  ],
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "1.25.1",
    "mammoth": "1.11.0",
    "zod": "^4.3.2"
  },
  "devDependencies": {
    "@types/node": "25.0.3",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "father": "^4.6.13",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{js,jsx,json,md}": [
      "prettier --write"
    ]
  }
}
